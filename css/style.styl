BG = #202a25
FG = #5f4bb6
FG1 = #26f0f1
FD = #86a5d9

*
  box-sizing border-box
  scrollbar-width none

  &::-webkit-scrollbar
    width 0

html, body
  width 100%
  height 100%
  margin 0
  font-family 'DM Sans', sans-serif
  font-size 1rem
  background-color BG
  color FG

[v-cloak]
  display none !important

*::placeholder
  color BG
  opacity 1
  transition color .1s, border-color .1s

#app
  width 100%
  height 100%

.screen
  width 100%
  height 100%
  display flex
  flex-flow column wrap
  padding 1rem

  .window
    width 50%
    height 50%
    padding 1rem
    color FG
    transition color .1s, border-color .1s, width .2s, height .2s, padding .2s

    .w-inner
      width 100%
      height 100%
      border 1px solid FG
      transition color .1s, border-color .1s
      position relative
      display flex
      flex-direction column

      .title
        width 100%
        padding .5rem
        font-weight bold
        background-color FG
        transition color .1s, border-color .1s
        color BG
        position sticky
        left 0
        top 0
        user-select none
        cursor pointer

      .content
        flex 1
        padding 1rem
        overflow hidden
        display flex
        flex-direction column

        .text
          flex 1
          white-space pre-wrap
          overflow auto

          &.flex
            display flex
            flex-direction column

        .graph
          flex 1

        input
          flex 1
          background none
          border none
          font inherit
          color inherit
          padding 0
          outline none

          &[type='file']
            display none

        button
          background none
          border 1px solid FG
          font inherit
          color inherit
          padding .5rem
          outline none
          transition color .1s, border-color .1s
          cursor pointer

        textarea
          flex 1
          background none
          border 1px solid FG
          resize none
          font inherit
          color inherit
          padding .5rem
          outline none
          transition color .1s, border-color .1s
          margin-top 1rem
          margin-bottom 1rem

        .spacer
          margin-right 1rem

        .input-wrapper
          display flex

        .input-wrapper-chat
          display flex
          position sticky
          bottom 0

          input
            padding .5rem
            margin-top 1rem
            border 1px solid FG
            transition color .1s, border-color .1s

    &.active
      color FG1

      *::placeholder
        color FD

      .w-inner
        border-color FG1

        button, textarea
          border-color FG1

        .title
          background-color FG1

        .input-wrapper-chat input
          border-color FG1

  &.max

    .window

      &:not(.active)
        width 0
        height 0
        padding 0

        .w-inner
          display none

      &.active
        width 100%
        height 100%
